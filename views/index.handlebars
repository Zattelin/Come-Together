        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Name of Event</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter Event">
          </div>
          <div class="form-group">
            <label for="example-description">Date and Time</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Date, Time"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>List of Upcoming Events:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
